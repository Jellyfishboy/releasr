.eightcol
  .page-header
    %h2.widget.widget-header= "#{yield :breadcrumb} project"
  = form_for [:admin, @project], html: { :class => 'form' } do |f|
    - if @project.errors.any?
      #errors
        %ul
          - @project.errors.full_messages.each do |msg|
            %li
              %i.icon-cancel-circle
              = msg  
    %fieldset.widget.widget-content.widget-last
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control'
      .form-group
        = f.label :github
        = f.text_field :github, :class => 'form-control'
      .form-group
        = f.label :website
        = f.text_field :website, :class => 'form-control'
    .form-action
      = f.submit 'Save', :class => 'btn btn-blue btn-large'
.fourcol.last
